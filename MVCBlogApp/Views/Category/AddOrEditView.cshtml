@model MVCBlogApp.Models.ViewModel.Category.EditCategoryView;
@{
    ViewData["Title"] = "Category page";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 bg-white">
                <div class="card-body p-4 p-md-5">
                    <h2 class="mb-4 fw-bold text-dark border-bottom pb-3">Category Management</h2>
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <form method="post" asp-action="AddOrEdit">
                        <input asp-for="CategoryId" type="hidden" name="CategoryId"/>
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="CategoryDto.Name" class="form-label fw-bold text-secondary">Category Name</label>
                            <input asp-for="CategoryDto.Name" class="form-control form-control-lg" placeholder="e.g. Technology"/>
                            <span asp-validation-for="CategoryDto.Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CategoryDto.IconBootstrapLink" class="form-label fw-bold text-secondary">Bootstrap Icon Class</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light text-secondary"><i class="bi bi-tag"></i></span>
                                <input asp-for="CategoryDto.IconBootstrapLink" class="form-control" placeholder="e.g. bi-alarm"/>
                            </div>
                            <span asp-validation-for="CategoryDto.IconBootstrapLink" class="text-danger small d-block mt-1"></span>
                            <div class="form-text mt-2 small text-muted">
                                Provide the class name from <a href="https://icons.getbootstrap.com/" target="_blank" class="text-decoration-none">Bootstrap Icons</a> library.
                            </div>
                        </div>

                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-primary px-4 py-2 fw-bold flex-fill">
                                <i class="bi bi-check-circle me-2"></i>Save Category
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>