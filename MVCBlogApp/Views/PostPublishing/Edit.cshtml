@model MVCBlogApp.Models.ViewModel.Post.EditPostView

@{
    ViewBag.Title = Model.EditedPostId == null ? "Add Post" : "Edit Post";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-controller="PostPublishing" asp-action="Save" method="post">
    @if (Model.EditedPostId != null)
    {
        <input type="hidden" asp-for="EditedPostId" />
    }

    <table>
        <tr>
            <td><label asp-for="PostDto.Title">Enter title:</label></td>
            <td>
                <input asp-for="PostDto.Title" type="text" />
                <span asp-validation-for="PostDto.Title"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="PostDto.PostCategoryId">Select category:</label></td>
            <td>
                <select asp-for="PostDto.PostCategoryId" asp-items="@(new SelectList(Model.PostCategories, "Id", "Name"))">
                </select>
                <span asp-validation-for="PostDto.PostCategoryId"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="PostDto.Content">Enter content:</label></td>
            <td>
                <textarea asp-for="PostDto.Content" rows="10" cols="50"></textarea>
                <span asp-validation-for="PostDto.Content"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="PostDto.Slug">Slug:</label></td>
            <td>
                <input asp-for="PostDto.Slug" type="text" />
                <span asp-validation-for="PostDto.Slug"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="PostDto.IsPublished">Published:</label></td>
            <td>
                <input asp-for="PostDto.IsPublished" type="checkbox" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">
                    @(Model.EditedPostId == null ? "Add Post" : "Save Changes")
                </button>
            </td>
        </tr>
    </table>
</form>
