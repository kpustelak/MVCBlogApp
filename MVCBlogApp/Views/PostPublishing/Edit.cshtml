@model MVCBlogApp.Models.ViewModel.Post.EditPostView

@{
    ViewBag.Title = Model.EditedPostId == null ? "Add Post" : "Edit Post";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/post-edit.css"/>

<div class="post-edit-container">
    <div class="post-edit-wrapper">
        <h2>@ViewBag.Title</h2>

        <form asp-controller="PostPublishing" asp-action="Save" method="post">
            @if (Model.EditedPostId != null)
            {
                <input type="hidden" asp-for="EditedPostId" />
            }
            
            <div class="top-fields-container">
                <div class="field-group">
                    <label asp-for="PostDto.Title">Title</label>
                    <input asp-for="PostDto.Title" type="text" placeholder="Enter your post title..." />
                    <span asp-validation-for="PostDto.Title"></span>
                </div>

                <div class="field-group">
                    <label asp-for="PostDto.PostCategoryId">Category</label>
                    <select asp-for="PostDto.PostCategoryId" asp-items="@(new SelectList(Model.PostCategories, "Id", "Name"))">
                        <option value="">-- Choose a category --</option>
                    </select>
                    <span asp-validation-for="PostDto.PostCategoryId"></span>
                </div>

                <div class="field-group">
                    <label asp-for="PostDto.Slug">Slug</label>
                    <input asp-for="PostDto.Slug" type="text" placeholder="post-url-slug" />
                    <span asp-validation-for="PostDto.Slug"></span>
                </div>

                <div class="field-group checkbox-field">
                    <input asp-for="PostDto.IsPublished" type="checkbox" />
                    <label asp-for="PostDto.IsPublished">Published</label>
                </div>
            </div>
            
            <div class="editor-container">
                <label asp-for="PostDto.Content">Content</label>
                <textarea asp-for="PostDto.Content" placeholder="Write your post content here..."></textarea>
                <span asp-validation-for="PostDto.Content"></span>
            </div>
            
            <div style="margin-top: 2rem; display: flex; gap: 1rem;">
                <button type="submit">
                    @(Model.EditedPostId == null ? "Add Post" : "Save Changes")
                </button>
            </div>
        </form>
    </div>
</div>