@model MVCBlogApp.Models.ViewModel.Post.PostIndex;

@{
    ViewBag.Title = "Your Posts";
    Layout = "_Layout";
}


<link rel="stylesheet" href="~/css/post-index.css"/>

<div class="post-index-container">
    <div class="post-index-wrapper">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Your posts</h2>
                <span class="text-muted">Total: @(Model.Posts?.Count ?? 0)</span>
            </div>
            <a asp-action="Edit" class="btn btn-primary">
                + Add new post
            </a>
        </div>

        @if (Model.Posts != null && Model.Posts.Any())
        {
            <div class="row g-3">
                @foreach (var post in Model.Posts)
                {
                    <div class="col-md-4 col-lg-3" id="image-@post.Id">
                        <div class="card h-100 shadow-sm border-0">
                            
                            @{
                                var imgSrc = string.IsNullOrEmpty(post.FeaturedImageUrl) 
                                    ? "https://placehold.co/600x400?text=No+Cover" 
                                    : post.FeaturedImageUrl;
                            }
                            
                            <img src="@imgSrc" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Post cover">

                            <div class="card-body">
                                <h5 class="card-title text-truncate">@post.Title</h5>
                                
                                <div class="small text-muted mb-2">
                                    <div><strong>ID:</strong> @post.Id</div>
                                    <div>
                                        <strong>Status:</strong> 
                                        <span class="badge @(post.IsPublished ? "bg-success" : "bg-secondary")">
                                            @(post.IsPublished ? "Published" : "Draft")
                                        </span>
                                    </div>
                                </div>

                                <div class="d-flex gap-2 mt-3">
                                    <a class="btn btn-outline-primary flex-fill btn-sm" href="@Url.Action("Edit","PostPublishing", new{id = post.Id })">
                                        Edit
                                    </a>
                                    
                                    <form asp-action="Delete" asp-controller="PostPublishing" method="post" class="flex-fill">
                                        <input type="hidden" name="postId" value="@post.Id" />
                                        <button type="submit" onclick="return confirm('Delete this post?')" class="btn btn-outline-danger w-100 btn-sm">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-light text-center border">
                <h3>No posts found</h3>
                <p>Click "Add new post" to start writing.</p>
            </div>
        }
    </div>
</div>