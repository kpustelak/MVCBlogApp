@model MVCBlogApp.Models.ViewModel.Image.ImageIndex

@{
ViewData["Title"] = "Image Management";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Upload New Image</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UploadImage" asp-controller="Image" method="post" enctype="multipart/form-data" id="uploadForm">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="AltText" class="form-label">Alt Text</label>
                            <input name="AltText" id="AltText" class="form-control" placeholder="Enter alternative text for the image" required maxlength="200" />
                            <div class="text-danger" id="altTextError"></div>
                        </div>

                        <div class="mb-3">
                            <label for="File" class="form-label">Image File</label>
                            <input name="File" id="File" class="form-control" type="file" accept="image/*" required />
                            <div class="text-danger" id="fileError"></div>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Upload Image
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Uploaded Images: @Model.listOfImages?.Count</h5>
                </div>
                <div class="card-body">
                    @if (Model.listOfImages != null && Model.listOfImages.Any())
                    {
                        <div class="row g-3">
                            @foreach (var image in Model.listOfImages)
                            {
                                <div class="col-md-4 col-lg-3" id="image-@image.Id">
                                    <div class="card h-100">
                                        <img src="@image.FilePath" class="card-img-top" alt="@image.AltText" style="height: 200px; object-fit: cover;">
                                        <div class="card-body">
                                            <p class="card-text small">
                                                <strong>Alt:</strong> @image.AltText
                                            </p>
                                            <p class="card-text small text-muted">
                                                <strong>ID:</strong> @image.Id
                                            </p>
                                            
                                        </div>
                                        <div class="card-body d-flex gap-2">
                                            <button onclick="copyFunctionality('@image.FilePath')" class="btn btn-primary flex-fill">
                                                ðŸ”— Copy link
                                            </button>
                                            <button onclick="editFileAlt('@image.Id', '@image.FilePath', '@image.AltText')" class="btn btn-primary flex-fill">
                                                âœŽ Edit Alt
                                            </button>
                                        </div>
                                        <div class="card-footer">
                                            <form asp-action="DeleteImage" asp-controller="Image" method="post" asp-action="delete">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@image.Id" />
                                                <button type="submit" onclick="return confirm('Sure?')" class="btn btn-danger btn-sm w-100 bi-delete">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> No images uploaded yet. Upload your first image above!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav>
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<div class="overlay" id="editOverlay" onclick="closeEditWindow()"></div>

<div class="window" id="editWindow">
    <div class="window-header">
        <h5 class="window-title">Edytuj plik</h5>
        <button type="button" class="btn-close-window" onclick="closeEditWindow()">&times;</button>
    </div>
    
    <div class="window-body">
        <div class="image-preview">
            <img id="previewImage" src="" alt="PodglÄ…d" />
        </div>
        
        <form id="editForm" method="post" asp-controller="Image" asp-action="edit">
            <input type="hidden" name="fileId" id="fileId" value="" />
    
            <div class="form-group">
                <label for="fileAltText">Tekst pliku:</label>
                <input type="text" 
                       class="form-control" 
                       name="fileAltText" 
                       id="fileAltText" 
                       value=""
                       placeholder="WprowadÅº nowy tekst" />
            </div>
    
            <button type="submit" class="btn btn-success btn-accept">
                <i class="bi bi-check-circle"></i> Zaakceptuj
            </button>
        </form>
    </div>
</div>

<style>
.overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 19;
    display: none;
}

.window {
    position: fixed;
    z-index: 20;
    top: 50%;
    left: 50%;
    display: none;
    width: 600px;
    max-height: 80vh;
    background-color: #ffffff;
    border-radius: 8px;
    transform: translate(-50%, -50%);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    overflow: hidden;
}

.window-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
}

.window-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 500;
}

.btn-close-window {
    background: none;
    border: none;
    font-size: 2rem;
    line-height: 1;
    color: #6c757d;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
}

.btn-close-window:hover {
    color: #000;
}

.window-body {
    padding: 20px;
    overflow-y: auto;
    max-height: calc(80vh - 70px);
}

.image-preview {
    margin-bottom: 20px;
    text-align: center;
    min-height: 150px;
    background-color: #f8f9fa;
    border-radius: 6px;
    padding: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.image-preview img {
    max-width: 100%;
    max-height: 200px;
    object-fit: contain;
    border-radius: 4px;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    font-weight: 500;
    margin-bottom: 8px;
    display: block;
}

</style>


<script>
function copyFunctionality(text) {
    navigator.clipboard.writeText(text);
}

function editFileAlt(fileId, imageSrc, currentText) {
    document.getElementById('editOverlay').style.display = 'block';
    document.getElementById('editWindow').style.display = 'block';

    document.getElementById('fileId').value = fileId;  
    document.getElementById('fileAltText').value = currentText || '';  

    if (imageSrc) {
        document.getElementById('previewImage').src = imageSrc;
    }
}

function closeEditWindow() {
    document.getElementById('editOverlay').style.display = 'none';
    document.getElementById('editWindow').style.display = 'none';
}

document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
        closeEditWindow();
    }
});
</script>